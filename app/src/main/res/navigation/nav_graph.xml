<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.classy.slicetime.Fragment.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_home_to_settings"
            app:destination="@id/settingsFragment" />

        <action
            android:id="@+id/action_home_to_complete"
            app:destination="@id/sessionCompleteFragment" />
    </fragment>

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.classy.slicetime.Fragment.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />

    <fragment
        android:id="@+id/sessionCompleteFragment"
        android:name="com.classy.slicetime.Fragment.SessionCompleteFragment"
        android:label="Complete"
        tools:layout="@layout/fragment_session_complete">

        <action
            android:id="@+id/action_complete_to_home"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>